@{
    ViewData["Title"] = "Gandiva Test Project - Sizov Ivan";
}
@model IEnumerable<GandivaTestProject.Models.TaskViewModel>

<a href="/Task/NewTask">Создать новую задачу</a> <a href="/Users">Пользователи</a>

<table class="table table-hover">
    <thead>
        <tr>
            <th>№</th>
            <th>Заголовок</th>
            <th>Создатель</th>
            <th>Исполнитель</th>
            <th>Дата создания</th>
        </tr>
    </thead>
    <tbody>
        @{ 
            foreach (var t in Model)
            {
                <tr>
                    <td>t.ID</td>
                    <td>t.Title</td>
                    <td>t.Creator</td>
                    <td>t.Contractor</td>
                    <td>t.CreateDate</td>
                </tr>
            }
        }
    </tbody>
</table>
